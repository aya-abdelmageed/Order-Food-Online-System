@model OrderFood.DAL.Entities.User.ApplicationUser
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<section class="intro">
    <div class="bg-image-vertical h-100" style="background-color: #EFD3E4;
          background-image: url(https://images.unsplash.com/photo-1555396273-367ea4eb4db5?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fHJlc3RhdXJhbnR8ZW58MHx8MHx8fDA%3D);
        ">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="card-body p-5">
                                <form asp-action="UpdateOwnerAccount">
                                    <a href="#" class="d-flex mb-3" style="width:100px; height:100px;">
                                        <img src="~/@Model.Image" alt="" class="img-fluid rounded-circle">
                                    </a>
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-floating mb-4">
                                        <input asp-for="Image" type="text" class="form-control" />
                                        <label asp-for="Image" class="form-label">Image</label>
                                    </div>

                                    <!-- 2 column grid layout with text inputs for the first and last names -->
                                    <div class="row">
                                        <div class="col-12 col-md-6 mb-4">
                                            <div class="form-floating">
                                                <input asp-for="FirstName"  class="form-control" />
                                                <label asp-for="FirstName" class="form-label">First name</label>
                                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6 mb-4">
                                            <div class="form-floating">
                                                <input asp-for="LastName" class="form-control" />
                                                <label asp-for="LastName" class="form-label">Last name</label>
                                                <span asp-validation-for="LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="form-floating mb-4">
                                        <input asp-for="Email" type="email"  class="form-control" />
                                        <label asp-for="Email" class="form-label">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <!-- Username -->
                                    <div class="form-floating mb-4">
                                        <input asp-for="UserName" class="form-control" />
                                        <label asp-for="UserName"  class="form-label">UserName</label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <!-- DateOfBirth -->
                                    <div class="form-floating mb-4">
                                        <input asp-for="DateOfBirth" type="date" class="form-control" value="@Model.DateOfBirth" />
                                        <label asp-for="DateOfBirth" class="form-label">DateOfBirth</label>
                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                    </div>

                                    <!-- Address -->
                                    <div class="form-floating mb-4">
                                        <input asp-for="Address" class="form-control" />
                                        <label asp-for="Address" class="form-label">Address</label>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                     <!-- password --> 
                                    @* <div class="form-floating mb-4"> *@
                                    @*     <input asp-for="PasswordHash" type="password" class="form-control" /> *@
                                    @*     <label asp-for="PasswordHash" class="form-label">Password</label> *@
                                    @*     <span asp-validation-for="PasswordHash" class="text-danger"></span> *@
                                    @*   </div>  *@

                                   
                                    <!-- Submit button -->
                                    <input type="submit" class="btn btn-secondary btn-rounded btn-block" value="Update" />
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

