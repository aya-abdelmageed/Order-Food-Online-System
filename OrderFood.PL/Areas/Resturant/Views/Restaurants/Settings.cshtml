@using OrderFood.PL.Areas.Resturant.ViewModel
@model UploadViewModel;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{ 
     ViewData["Title"] = "Settings"; 
} 

<div class="container vh-100 vw-100 justify-content-center">
    <div class="d-grid row justify-content-center align-text-center text-opacity-75 bg-warning bg-opacity-25">
        <h3>@Model.Restaurant.Name</h3>
    </div>
    <div class="container d-grid border border-5 border-warning border-opacity-25 mt-4 mb-5 p-3 h-auto w-100 shadow" >
        <form asp-action="Settings" enctype="multipart/form-data" method="post"> 
            <input asp-for="@Model.Restaurant.Id" type="hidden" />
        <input asp-for="@Model.Restaurant.OwnerId" type="hidden" />


            <div class="row mb-3">
                <div class="d-flex flex-row gap-2 align-items-end">
                    <img  src="@Model.Restaurant.Logo" alt="@Model.Restaurant.Name" class="me-5" width="200px" height="200px" >
                    <div class="form-outline w-50">
                    <label asp-for="@Model.Restaurant.Logo" class="form-label">Logo</label>
                    <input type="hidden" asp-for="@Model.Restaurant.Logo" />
                        <input type="file" name="ImageFile" asp-for="@Model.ImageFile" class="form-control" />
                    </div>
                    <button type="button" class="btn btn-light">Remove</button>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6 form-group ">
                <label asp-for="@Model.Restaurant.Name" class="form-label">Name</label>
                <input asp-for="@Model.Restaurant.Name" class="form-control" />
                    
                    @* <span asp-validation-for="Name" class="text-danger"></span>              *@
                </div>
                <div class="col-md-6 form-group">
                    <!-- HotLine -->
                <label asp-for="@Model.Restaurant.HotLine" class="form-label">HotLine</label>
                <input asp-for="@Model.Restaurant.HotLine" class="form-control" />
                    @* <span asp-validation-for="HotLine" class="text-danger"></span>  *@
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6 form-group">
                <label asp-for="@Model.Restaurant.Address" class="form-label">Address</label>
                <textarea asp-for="@Model.Restaurant.Address" class="form-control" rows="3"></textarea>

                </div>
                <div class="col-md-6">
                    <label class="form-label">Your Location</label>
                    <div class="form-control" rows="3">
                    <input asp-for="@Model.Restaurant.Long" type="hidden" />
                    <input asp-for="@Model.Restaurant.Lat" type="hidden" />
                        @* <iframe    *@
                        @*      src="https: //maps.googleapis.com/maps/api/staticmap?center =Jaipur&zoom =10&size =300x100&key =YOUR_API_KEY" *@
                        @*      >  *@
                        @*  </iframe> *@
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center ">
                <input type="submit" value="Save Setting" class="btn btn-warning text-white" />
            </div>
            
        </form>
       
        </div>
    </div>

