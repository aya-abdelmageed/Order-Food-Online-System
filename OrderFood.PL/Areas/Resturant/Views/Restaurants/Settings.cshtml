@model OrderFood.DAL.Entities.Models.Restaurant

@{ 
     ViewData["Title"] = "Settings"; 
     Layout = "~/Views/Shared/_Layout.cshtml";
} 

<div class="container vh-100 vw-100 justify-content-center">
    <h4>Restaurant</h4>
    <hr />

    <div class="container row border border-2 p-2 h-75 w-100 ">
