@model OrderFood.DAL.Entities.Models.Restaurant
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<section class="intro">
    <div class="bg-image-vertical h-100" 
    style="background-color: #EFD3E4;
           background-image: url(https://images.unsplash.com/photo-1555396273-367ea4eb4db5?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fHJlc3RhdXJhbnR8ZW58MHx8MHx8fDA%3D);"
    >
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="card-body p-5">
                                <form asp-action="UpdateRestaurantInfo">
                                    <div class="form-outline mb-4 d-flex flex-row">
                                        <div class=" justify-content-center align-items-center ">
                                            <img src="@Model.Logo" alt="img" class="rounded-circle" style="width:200px; height:200px;" />
                                        </div>     
                                    </div>
                                    
                                    <div class=" form-outline mb-4">
                                        <input class="form-control" asp-for="@Model.Logo" />
                                        <label asp-for="Logo" class="form-label">Logo</label>
                                    </div>
                                    <input type="hidden" asp-for="@Model.Id"/>
                                    <input type="hidden" asp-for="@Model.OwnerId" />
                                    <!-- Name -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="Name" class="form-control" />
                                        <label asp-for="Name" class="form-label">Name</label>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <!-- Address -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="Address" class="form-control" />
                                        <label asp-for="Address" class="form-label">Address</label>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>

                                    <!-- HotLine -->
                                    <div class="form-outline mb-4">
                                        <input asp-for="HotLine" class="form-control" />
                                        <label asp-for="HotLine" class="form-label">HotLine</label>
                                        <span asp-validation-for="HotLine" class="text-danger"></span>
                                    </div>

                                    

                                    <!-- Submit button -->
                                    <input type="submit" value="Update" class="btn btn-secondary btn-rounded btn-block" />
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>