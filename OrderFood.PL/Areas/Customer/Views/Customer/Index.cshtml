@* @model OrderFood.PL.Areas.Customer.Models.CategoryViewModel; *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    var restaurant = ViewData["Restaurants"] as List<OrderFood.DAL.Entities.Models.Restaurant>; ;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>

    .panel {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.8);
    height: 25vh; 
    border-radius: 40px;
    color: #fff;
    cursor: pointer;
    flex: 2.5;
    margin: 10px;
    position: relative;
    -webkit-transition: all 700ms ease-in;
    }

    .panel h3 {
    font-size: 24px;
    position: absolute;
    bottom: 20px;
    left: 5px;
    margin: 0;
    opacity: 0;
    }

    .panel.active {
    flex: 5;
    }

    .panel.active h3 {
    opacity: 1;
    transition: opacity 0.3s ease-in 0.4s;
    }

    /* card styles */
     

     

    :root {
        --gradient: linear-gradient(to left top, darkolivegreen 10%,olive 90%) !important;
    }


    .card {
        transition: transform 0.3s, box-shadow 0.3s;
        min-height: 100%;
        background-color:mintcream;
        border: 2px solid green;
        color: #212529;
        margin-bottom: 2rem;
    }

        .card:hover {
            transform: translateY(-10px);
            transform: scale(1.05);
            box-shadow: 0 20px 30px rgba(0, 0, 0, 0.2);
        }

    .card-text{
        color: #212529;
        font-size: 1rem;
        line-height: 1.5;
        margin-bottom: 0.75rem;
        word-wrap: break-word;
        overflow-wrap: break-word;
       --webkit-white-space: wrap;
    }

    .btn {
        border: 3px solid;
        border-image-slice: 1;
        background: var(--gradient) !important;
        -webkit-background-clip: text !important;
        -webkit-text-fill-color: transparent !important;
        border-image-source: var(--gradient) !important;
        text-decoration: none;
        transition: all .4s ease;
    }

        .btn:hover, .btn:focus {
            background: var(--gradient) !important;
            -webkit-background-clip: none !important;
            -webkit-text-fill-color: #fff !important;
            border: 5px solid #fff !important;
            border-radius: 20px !important;
            box-shadow: #222 1px 0 10px;
            text-decoration: underline;
        }

    .card-img-top {
  
           width: 100%; 
           height: 200px;
           object-fit: cover;
       }
       .flex-column{
           display: flex
;
    flex-direction: column;
    justify-content: space-between;
       }
       .text{
                      font-size: 0.8rem;
           color: #555;
           text-align: left;
           white-space: normal;
           overflow: hidden;
        white-space:break-spaces !important;

       }


</style>
<div>
    <div class="mt-5 ms-5 ">
        <h3 class="text-bg-light ">Discover Our Categories</h3>
        <hr class="border border-2 border-dark fw-bold">
    </div>

    <div class="container vw-100 d-flex">
        @foreach(var item in Model)
        {
            <div class="panel" style="background-image: url('@item.Image') ">
                <a class="text-bg-light text-info"  asp-action="Index" asp-route-name="@item.CategoryName"><h3>@item.CategoryName <span class="bi bi-search"></span></h3></a>
            </div>
        }
    </div>
    <div class="d-flex justify-content-end m-3">
        <a class="btn"
 asp-action="Index" asp-route-name=""><h3>Clear <span class="bi bi-search"></span></h3></a>
    </div>

</div>
<div class="m-3 p-3">

    <h3 class="text-bg-light">
        Our Restaurants
    </h3>
    <hr class="border border-2 border-dark fw-bold">


    <div class="container mt-4 ms-5">
        <div class="row">
            @foreach (var i in restaurant)
            {
                <div class="col-md-4 mb-3">
                    <div class="card" style="width: 18rem;">
                    <img src="@i.Logo" class="card-img-top" alt="@i.Name">
                    <div class="card-body flex-column d-flex flex-column">
                        <h5 class="card-title text-dark">@i.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@i.Address</h6>
                        <p  style="text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <div class="d-flex">
                        
                        <a href="#" class="btn"><i class="bi bi-link"></i> Visit Restaurant</a>
                            </div>
                    </div>
                </div>
            </div>
            }
        </div>

  
</div>
@section Scripts {
    <script>
        const panels = document.querySelectorAll('.panel');
        panels.forEach(panel => {
            panel.addEventListener('mouseover', () => {
                removeActiveClasses();
                panel.classList.add('active');
            });
        });
            panels.forEach(panel => {
                panel.addEventListener('mouseout', () => {
                    removeActiveClasses();
                        panel.classList.remove('active');
                });
            });
        function removeActiveClasses() {
            panels.forEach(panel => {
                panel.classList.remove('active');
            });
        }
    </script>
}